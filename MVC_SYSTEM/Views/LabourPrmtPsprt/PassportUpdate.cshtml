@model MVC_SYSTEM.LabourModels.tbl_LbrDataInfo

@{
    ViewBag.Title = "Passport Update";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.DateScriptAdv = 1;
    GetConfig GetConfig = new GetConfig();
    ChangeTimeZone ChangeTimeZone = new ChangeTimeZone();
    var DateNow = ChangeTimeZone.gettimezone();
    string dateformat = GetConfig.GetData("dateformat");
    Model.fld_PassportEndDT = string.IsNullOrEmpty(Model.fld_PassportEndDT.ToString()) ? DateNow : Model.fld_PassportEndDT;
    if (Model.fld_PassportEndDT == null)
    {
        Model.fld_PassportEndDT = DateNow;
    }
}

<style>
    div.ex0 {
        height: auto;
        width: 100px;
        margin: 100px;
        background-color: purple;
    }

    div.ex2 {
        padding-left: 160px;
        padding-top: 10px;
    }

    div.ex3 {
        padding-left: 190px;
        padding-top: 10px;
    }
</style>

<section class="content-wrapper main-content clear-fix">
    <div class="well" id="well">
        <div class="form-horizontal">
            <div class="col-sm-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Passport Renew: @Model.fld_WorkerNo - @Model.fld_WorkerName</div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = ViewBag.MsgColor })
                            <input type="hidden" id="fld_LbrRefID" name="fld_LbrRefID" value="@Model.fld_ID" />
                            @Html.AntiForgeryToken()

                    <table style="width:100%">

                        <tr>
                            <td style:"form-group">
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px; padding-top:40px; ">Worker ID:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.fld_WorkerIDNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </td>

                            <td style:"form-group">
                                <div class="col-sm-5">
                                    <label style="float: left; margin-right: 10px; padding-left: 40px; padding-top: 40px; ">Worker Name:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-8">
                                        @Html.EditorFor(model => model.fld_WorkerName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </td>

                        </tr>

                        <tr>
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px;  padding-top:20px; ">Current Passport No:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-6">
                                        @Html.TextBox("fld_OldPrmtPsprtNo", Model.fld_WorkerIDNo, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px; padding-top:20px; "> New Passport No:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-8">
                                        @Html.TextBox("fld_NewPrmtPsprtNo", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                        <tr style="padding-top:20px">
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px; padding-top:20px; "> Current Passport Start Date:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-6">
                                        @*<div class='input-group date' id='datetimepicker3'>*@
                                        @Html.TextBox("fld_PassportStartDT", Model.fld_PassportStartDT, "{0:dd/MM/yyyy}", htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                        @*</div>*@
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px;  padding-top:20px">Current Passport Exp Date:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-8">
                                        <div class='input-group date' id='datetimepicker1'>
                                            @Html.TextBox("fld_OldPrmtPsrtEndDT", Model.fld_PassportEndDT, "{0:dd/MM/yyyy}", htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td></td>


                        </tr>


                        <tr style="padding-top:20px">
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px;  padding-top:20px">Renewal Passport Start Date:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-6">
                                        <div class='input-group date' id='datetimepicker2'>
                                            @Html.TextBox("fld_PassportRenewalStartDate", Model.fld_PassportRenewalStartDate, "{0:dd/MM/yyyy}", htmlAttributes: new { @class = "form-control" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px;  padding-top:20px">New Passport Exp Date:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-8">
                                        <div class='input-group date' id='datetimepicker2'>
                                            @Html.TextBox("fld_NewPrmtPsrtEndDT", Model.fld_PassportEndDT.Value.AddYears(3), "{0:dd/MM/yyyy}", htmlAttributes: new { @class = "form-control" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td></td>

                        </tr>

                        <tr style="padding-top:20px">
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px;  padding-top:20px">Passport Status:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-6">
                                        @Html.DropDownList("fld_PassportStatus", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.fld_PassportStatus, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="col-sm-5">
                                    <label style="float:left; margin-right:10px ; padding-left:40px; padding-top:20px; ">Renewal Passport Status:</label>
                                </div>
                                <div class="ex3">
                                    <div class="col-sm-8">
                                        @Html.DropDownList("fld_PassportRenewalStatus", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.fld_PassportRenewalStatus, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <div style="text-align:right;align-items:end; float:inline-end">
                                    <div class="col-sm-10" style="display: flex; justify-content: flex-end">
                                        <input type="submit" value="Save" class="btn btn-success" />
                                        @Html.ActionLink("Back to List", "Index", "LabourPrmtPsprt", null, htmlAttributes: new { @class = "btn btn-warning" })
                                    </div>
                                </div>
                            </td>
                        </tr>

                    </table>
                          
                        }
                    </div>

                </div>

                <div class="panel panel-primary">
                    <div class="panel-heading">Passport Renew Info</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.Action("_LabourPassportDetail", new { LabourID = Model.fld_ID })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $('#datetimepicker1').datetimepicker({
        format: '@dateformat',
        useCurrent: false
    });

    $('#datetimepicker2').datetimepicker({
        format: '@dateformat',
        useCurrent: false
    });
       $('#datetimepicker3').datetimepicker({
        format: '@dateformat',
        useCurrent: false
    });

    $('#datetimepicker4').datetimepicker({
        format: '@dateformat',
        useCurrent: false
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

