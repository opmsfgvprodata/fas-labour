@model IEnumerable<MVC_SYSTEM.MasterModels.tblMenuList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content-wrapper main-content clear-fix">
    <div class="well">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="panel panel-primary">
                        <div class="panel-heading">@GlobalResEstate.lblTitle</div>
                        @*<div class="panel-heading">Title</div>*@
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-sm-6">
                                    @*<label for="ListReport">List</label>*@
                                    <label for="ListReport">@GlobalResEstate.lblReportList</label>
                                    @Html.DropDownList("ReportList", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer-report">
                    @*<input class="btn btn-primary" type="submit" name="upload" id="upload" value="@GlobalResReport.btnViewReport" />*@

                    <input class="btn btn-primary" type="submit" name="upload" id="upload" value="@GlobalResEstate.btnViewReport" onclick="return DisplayProgressMessage(this);" />
                </div>
            </div>
        }
    </div>
</section>

<script>
